
@{
    ViewBag.Title = "DMS System-" + "能耗管理";
    Layout = "~/Views/Layout.cshtml";
}

<script type="text/javascript" src="~/Scripts/HighCharts/highcharts.js"></script>
<script type="text/javascript">
    $(function () {
        $('#container').highcharts({
            title: {
                text: '实时电耗',
                x: -20 //center
            },
            subtitle: {
                text: '',
                x: -20
            },
            xAxis: {
                categories: ['0:00', '2:00', '4:00', '6:00', '8:00', '10:00',
                    '12:00', '14:00', '16:00', '18:00', '20:00', '22:00']
            },
            yAxis: {
                title: {
                    text: '用电量 (KW/H)'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                valueSuffix: 'KW/H'
            },
            credits: {
                text: 'Dadesys.com',
                href: 'http://www.dadesys.com'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [{
                name: '欧姆龙',
                data: [7.0, 6.9, 9.5, 14.5, 18.2, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6]
            }, {
                name: 'Honey Well',
                data: [0.2, 0.8, 5.7, 11.3, 17.0, 22.0, 24.8, 24.1, 20.1, 14.1, 8.6, 2.5]
            }, {
                name: 'Dade',
                data: [0.9, 0.6, 3.5, 8.4, 13.5, 17.0, 18.6, 17.9, 14.3, 9.0, 3.9, 1.0]
            }, {
                name: 'Canon',
                data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
            }]
        });
    });
</script>
<h2>能耗管理</h2>
<body>
    <ol class="breadcrumb" style="background:none">
        <li><a href="#">设备监控</a></li>
        <li><a href="#">实时监控</a></li>
        <li class="active">能耗管理</li>
    </ol>
    <hr />
    <div class="row">
        <div class="col-md-3 ">
            <div class="input-group">
                <span class="input-group-addon">选择设备</span>
                <input type="text" class="form-control" placeholder="设备编号">
            </div>
        </div>
        <div class="col-md-3 ">
            <div class="input-group">
                <span class="input-group-addon">选择类型</span>
                <select class="form-control" placeholder="类型">
                    <option>实时电耗</option>
                    <option>实时水耗</option>
                </select>
            </div>
        </div>
        <div class="col-md-1 pull-right">
            <button class="btn btn-primary">
                <div class="glyphicon glyphicon-search"></div>
                查询
            </button>
        </div>

    </div>

    <hr />

    @*曲线图*@

    <div class="row">

        <div id="container" class="col-lg-12" style="min-width:800px;height:auto;"></div>
    </div>


</body>
