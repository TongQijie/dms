                if ($("#devicenumber").val() == "" || $("#devicenumber").val() == null) {
                    //alert("设备编号不能为空！");
                    document.getElementById('stutaslabel').innerText = "设备编号不能为空!";
                    document.getElementById('devicenumDiv').style.color = "red";
                    return;
                }
                else {

                }
